<Page x:Name="page"
    x:Class="UmaTool.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UmaTool"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    >
    <Grid Loaded="OnLoadGrid">
        <!--グリッドの比率や数を指定-->
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="5*"></RowDefinition>
            <RowDefinition Height="9*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="10*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <!--グリッドの色や線を決定-->
        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Background="#FFFF9800" />
        <Border Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Background="#FFFFD86D" />

        <!-- 内容の記述 -->
        <StackPanel Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="おきらくウマツール" FocusVisualPrimaryBrush="Black" Foreground="White" FontWeight="Bold" FontFamily="Meiryo UI" FontSize="20"></TextBlock>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="設定" FontSize="9" Background="#FFFFFFA0" Margin="4,0,4,0" />
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical" Margin="0,0,0,0">
            <StackPanel>
                <Button x:Name="screenShotButton" Click="Shot" Content="スクリーンショット" FontSize="14" Background="#FFFFFFA0" Padding="20,5,20,5" Margin="0,9,0,0" HorizontalAlignment="Center"/>
                <Button x:Name="captureButton" Click="Capture" Content="録画開始" FontSize="14" Background="{Binding Background, ElementName=screenShotButton}" Padding="20,5,20,5" Margin="0,9,0,0" HorizontalAlignment="Center" BorderBrush="{Binding BorderBrush, ElementName=screenShotButton}" IsEnabled="False" />
                <Button x:Name="autoAnalyzeButton" Click="StartAutoAnalyze" Content="選択肢自動解析" FontSize="14" Background="{Binding Background, ElementName=screenShotButton}" Padding="20,5,20,5" Margin="0,9,0,0" HorizontalAlignment="Center" BorderBrush="{Binding BorderBrush, ElementName=screenShotButton}" />
                <Button x:Name="adjustPositionButton" Click="AdjustPosition" Content="ウィンドウ微調整" FontSize="14" Background="{Binding Background, ElementName=screenShotButton}" Padding="20,5,20,5" Margin="0,9,0,0" HorizontalAlignment="Center" BorderBrush="{Binding BorderBrush, ElementName=screenShotButton}" />
            </StackPanel>

        </StackPanel>
        <RelativePanel Grid.Row="2" Grid.Column="1">
            <Rectangle Stroke="Black"
                       RelativePanel.AlignTopWithPanel="True"
                       RelativePanel.AlignBottomWithPanel="True"
                       RelativePanel.AlignLeftWithPanel="True"
                       RelativePanel.AlignRightWithPanel="True" />
        </RelativePanel>

        <StackPanel Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,5,5">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="UmaTool" Margin="0,0,5,0"></TextBlock>
                <TextBlock Text="version "></TextBlock>
                <TextBlock x:Name="AppVersion" Text="9.9.9"></TextBlock>
                <TextBlock Text="@ほっぴんぐがのん" Margin="5,0,0,0"></TextBlock>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="4" Grid.ColumnSpan="3">
            <TextBlock x:Name="ConsoleBox" Text="9.9.9"></TextBlock>
        </StackPanel>

    </Grid>
</Page>
